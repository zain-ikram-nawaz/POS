@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="bg-success text-light py-3 text-center m-0">Stock Overview</h3>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        @if (TempData["Ex"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Ex"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="col-md-12 border border-success rounded-3 p-4 shadow-sm mt-3 overflow-auto">
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-success">
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Total Boxes</th>
                        <th>Total Sold Boxes</th>
                        <th>Total Sold Pieces</th>
                        <th>Remaining Boxes</th>
                        <th>Remaining Pieces</th>
                        <th>Box Size</th>
                        <th>Piece Size</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Stock != null && ViewBag.Stock.Count > 0)
                    {
                        int i = 1;
                        foreach (var item in ViewBag.Stock)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.p_name</td>
                                <td>@item.TotalBoxes</td>
                                <td>@item.TotalSoldBoxes</td>
                                <td>@item.TotalSoldPieces</td>
                                <td>@item.RemainingBoxes</td>
                                <td>@item.RemainingPieces</td>
                                <td>@item.BoxSize</td>
                                <td>@item.PieceSize</td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center">No stock available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>